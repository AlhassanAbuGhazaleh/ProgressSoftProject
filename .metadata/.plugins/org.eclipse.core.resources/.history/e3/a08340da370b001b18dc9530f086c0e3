<%-- 	type="text/javascript"></script> --%>

<script>
	var currencies = '<c:out value="${currencies}"></c:out>';
	console.log("currencies : " + currencies);

	// 	$(document).ready(function() {

	// 		$("#cancelBtn").click(function() {
	// 			window.location.href = '../home';
	// 		});

	// 	});

	function addCurrency() {
		$("#loader-wrapper").attr("style",
		"background: black; opacity: 0.6; z-index: 100000;");
		debugger;
		var currency = $('#currency').val();

		$.ajax({
			url : "../submitDeal",
			type : "POST",
			data : currency,
			complete : function() {
				console.log("complete");
			},
			success : function(responseStatus) {
				if (responseStatus.status == "success") {
					// window.location.href = "../home";
				} else {
					toastrNotification(responseStatus.status,
							responseStatus.message);
				}
			},
			error : function(jqXHR, textStatus, errorThrown) {
				$("#loader-wrapper").attr("style",
						"background: black; opacity: 0.6;display:none");
				console.log(jqXHR);
				console.log(textStatus);
				console.log(errorThrown);
				$('#ajax_div').hide();
			}
		});
	}

	function submitDealForm() {
		$("#loader-wrapper").attr("style",
		"background: black; opacity: 0.6; z-index: 100000;");
		debugger;
		formData = $('#DealForm').serialize();
		
		$.ajax({
			url : "../submitDeal",
			type : "POST",
			data : formData,
			complete : function() {
				console.log("complete");
			},
			success : function(responseStatus) {
				if (responseStatus.status == "success") {
					// window.location.href = "../home";
				} else {
					toastrNotification(responseStatus.status,
							responseStatus.message);
				}
			},
			error : function(jqXHR, textStatus, errorThrown) {
// 				$("#loader-wrapper").attr("style",
// 						"background: black; opacity: 0.6;display:none");
				console.log(jqXHR);
				console.log(textStatus);
				console.log(errorThrown);
				$('#ajax_div').hide();
			}
		});
	}

	function updateToCurrencies() {

		var currencies = '<c:out value="${currencies}"></c:out>';
		var fromCurrency = $('#fromCurrency').val();
						var toCurrency = '<option selected>Please Select Currency</option>';
						for (var i = 0; i < currencies.length; i++) {
							while(currencies[i] != fromCurrency){
								toCurrency += "<option value='" + currencies[i] + "' ";
								toCurrency += ">"
								+ currencies[i].currencyName + "</option>";	
							}
						
						}
						$("#toCurrency").html(toCurrency);
						
						debugger;
					},
					error : function(jqXHR, textStatus, errorThrown) {
// 						$("#loader-wrapper").attr("style",
// 								"background: black; opacity: 0.6;display:none");
						console.log(jqXHR);
						console.log(textStatus);
						console.log(errorThrown);
						$('#ajax_div').hide();
					}
				});
	}
</script>


