$(document).ready(
		function() {

			$("#cancelBtn").click(function() {
				window.location.href = '../home';
			});

			$("#taskForm").on(
					'submit',
					function(e) {
						e.preventDefault();
						if (validateForm()) {
							submitTaskForm();
						} else {
							toastrNotification("error",
									"Please fill the required fields.",
									"Invalid Fields", "");
						}
					});

		});

